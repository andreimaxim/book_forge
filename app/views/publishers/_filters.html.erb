<div class="mb-4 flex flex-wrap gap-4 items-center">
  <span class="text-sm text-gray-500">Filter by:</span>

  <%# Size filters %>
  <div class="flex gap-2 flex-wrap">
    <% Publisher.sizes.keys.each do |size| %>
      <%= link_to size.humanize.titleize,
        publishers_path(size: size, status: params[:status], search: params[:search]),
        class: "px-3 py-1 rounded-full text-sm #{params[:size] == size ? 'bg-blue-100 text-blue-800' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}",
        data: { testid: "filter-size-#{size}" } %>
    <% end %>

    <% if params[:size].present? %>
      <%= link_to "Clear",
        publishers_path(status: params[:status], search: params[:search]),
        class: "px-3 py-1 rounded-full text-sm bg-red-100 text-red-700 hover:bg-red-200" %>
    <% end %>
  </div>

  <span class="text-gray-300">|</span>

  <%# Status filters %>
  <div class="flex gap-2">
    <% Publisher.statuses.keys.each do |status| %>
      <%= link_to status.humanize,
        publishers_path(status: status, size: params[:size], search: params[:search]),
        class: "px-3 py-1 rounded-full text-sm #{params[:status] == status ? 'bg-blue-100 text-blue-800' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}",
        data: { testid: "filter-status-#{status}" } %>
    <% end %>

    <% if params[:status].present? %>
      <%= link_to "Clear",
        publishers_path(size: params[:size], search: params[:search]),
        class: "px-3 py-1 rounded-full text-sm bg-red-100 text-red-700 hover:bg-red-200" %>
    <% end %>
  </div>
</div>
