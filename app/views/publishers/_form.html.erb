<%= form_with model: publisher, class: "space-y-6" do |form| %>
  <% if publisher.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            There were <%= pluralize(publisher.errors.count, "error") %> with your submission
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% publisher.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <fieldset>
    <legend class="text-lg font-medium text-gray-900 mb-4">Basic Information</legend>

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <%= form_field form, :name, label: "Publisher Name" %>
      <%= form_field form, :imprint, label: "Imprint" %>
    </div>

    <%= form_field form, :website, type: :url_field, label: "Website", placeholder: "https://example.com" %>

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <div class="mb-4">
        <%= form.label :size, "Size", class: "block text-sm font-medium text-gray-700" %>
        <%= form.select :size, Publisher.sizes.keys.map { |s| [s.humanize.titleize, s] }, { include_blank: "Select size..." }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>

      <div class="mb-4">
        <%= form.label :status, "Status", class: "block text-sm font-medium text-gray-700" %>
        <%= form.select :status, Publisher.statuses.keys.map { |s| [s.humanize, s] }, {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>
    </div>
  </fieldset>

  <fieldset>
    <legend class="text-lg font-medium text-gray-900 mb-4">Contact Information</legend>

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <%= form_field form, :contact_name, label: "Contact Name" %>
      <%= form_field form, :contact_email, type: :email_field, label: "Contact Email" %>
    </div>

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <%= form_field form, :contact_phone, type: :telephone_field, label: "Contact Phone" %>
      <%= form_field form, :phone, type: :telephone_field, label: "Main Phone" %>
    </div>
  </fieldset>

  <fieldset>
    <legend class="text-lg font-medium text-gray-900 mb-4">Address</legend>

    <%= form_field form, :address_line1, label: "Address Line 1" %>
    <%= form_field form, :address_line2, label: "Address Line 2" %>

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-3">
      <%= form_field form, :city, label: "City" %>
      <%= form_field form, :state, label: "State/Province" %>
      <%= form_field form, :postal_code, label: "Postal Code" %>
    </div>

    <%= form_field form, :country, label: "Country" %>
  </fieldset>

  <%= form_field form, :notes, type: :text_area, label: "Notes", rows: 3 %>

  <div class="flex justify-end gap-3 pt-4 border-t border-gray-200">
    <%= secondary_button "Cancel", url: publisher.persisted? ? publisher_path(publisher) : publishers_path %>
    <%= form.submit publisher.persisted? ? "Update Publisher" : "Create Publisher", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 cursor-pointer" %>
  </div>
<% end %>
