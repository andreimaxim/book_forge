<div class="w-full">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Publishers</h1>
    <%= primary_button "New Publisher", url: new_publisher_path %>
  </div>

  <%= render "search_form" %>
  <%= render "filters" %>

  <div class="bg-white rounded-lg shadow overflow-hidden">
    <% if @publishers.any? %>
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Contact</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Size</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @publishers.each do |publisher| %>
            <%= render "publisher", publisher: publisher %>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <%= empty_state(
        icon: "folder",
        message: "No publishers found. Create your first publisher to get started.",
        action: primary_button("New Publisher", url: new_publisher_path)
      ) %>
    <% end %>
  </div>
</div>
