<div class="space-y-4">
  <%# Form to add new representation %>
  <div class="bg-gray-50 rounded-lg p-4">
    <h4 class="text-sm font-medium text-gray-700 mb-3">
      Add <%= parent.is_a?(Author) ? "Agent" : "Author" %>
    </h4>
    <%= render "representations/form", parent: parent, representation: representation || parent.representations.build %>
  </div>

  <%# List of representations %>
  <div id="<%= parent.is_a?(Author) ? 'author-representations' : 'agent-representations' %>" class="bg-white rounded-lg border border-gray-200">
    <% if representations.any? %>
      <% representations.each do |rep| %>
        <%= render "representations/representation", representation: rep, parent: parent %>
      <% end %>
    <% else %>
      <div class="text-center py-8 text-gray-500">
        <p class="text-sm">No <%= parent.is_a?(Author) ? "agents" : "authors" %> yet.</p>
        <p class="text-xs mt-1">
          Use the form above to add a<%= parent.is_a?(Author) ? "n agent" : "n author" %>.
        </p>
      </div>
    <% end %>
  </div>
</div>
