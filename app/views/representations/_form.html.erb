<%= turbo_frame_tag parent.is_a?(Author) ? "new-author-representation-form" : "new-agent-representation-form" do %>
  <% url = parent.is_a?(Author) ? author_representations_path(parent) : agent_representations_path(parent) %>

  <%= form_with model: representation, url: url, class: "space-y-4" do |form| %>
    <% if representation.errors.any? %>
      <div class="rounded-md bg-red-50 p-4">
        <div class="flex">
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">
              <%= pluralize(representation.errors.count, "error") %> prohibited this representation from being saved:
            </h3>
            <div class="mt-2 text-sm text-red-700">
              <ul class="list-disc pl-5 space-y-1">
                <% representation.errors.full_messages.each do |message| %>
                  <li class="text-red-600"><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <div class="flex gap-4 items-end">
      <% if parent.is_a?(Author) %>
        <div class="flex-1">
          <label for="representation_agent_id" class="block text-sm font-medium text-gray-700">Agent</label>
          <select name="representation[agent_id]" id="representation_agent_id" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
            <option value="">Select an agent...</option>
            <% Agent.active.where.not(id: parent.agent_ids).each do |agent| %>
              <option value="<%= agent.id %>" <%= 'selected' if representation.agent_id == agent.id %>>
                <%= agent.full_name %> (<%= agent.agency_name %>)
              </option>
            <% end %>
          </select>
        </div>
      <% else %>
        <div class="flex-1">
          <label for="representation_author_id" class="block text-sm font-medium text-gray-700">Author</label>
          <select name="representation[author_id]" id="representation_author_id" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
            <option value="">Select an author...</option>
            <% Author.active.where.not(id: parent.author_ids).each do |author| %>
              <option value="<%= author.id %>" <%= 'selected' if representation.author_id == author.id %>>
                <%= author.full_name %> (<%= author.genre_focus %>)
              </option>
            <% end %>
          </select>
        </div>
      <% end %>

      <div class="flex items-center">
        <input type="checkbox" name="representation[primary]" id="representation_primary" value="1" class="h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500" <%= 'checked' if representation.primary? %>>
        <label for="representation_primary" class="ml-2 block text-sm text-gray-700">Primary</label>
      </div>

      <div>
        <%= form.submit "Add", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    </div>

    <%= form.hidden_field :status, value: "active" %>
  <% end %>
<% end %>
