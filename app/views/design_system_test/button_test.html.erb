<div class="flex-1 max-w-md">
  <h1 class="text-2xl font-bold text-gray-900">Button Loading State Test</h1>
  <p class="mt-2 text-gray-600">This page tests button loading states on form submission.</p>

  <div class="mt-6">
    <%= form_with url: design_system_test_button_submit_path, method: :post, data: { controller: "loading", testid: "button-form" } do |f| %>
      <%= f.submit "Perform Action",
          data: {
            testid: "loading-button",
            loading_target: "button",
            action: "click->loading#start"
          },
          class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 disabled:opacity-50 disabled:cursor-not-allowed" %>
    <% end %>
  </div>
</div>
