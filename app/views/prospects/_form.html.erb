<%= form_with model: prospect, class: "space-y-6" do |form| %>
  <% if prospect.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            There were <%= pluralize(prospect.errors.count, "error") %> with your submission
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% prospect.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <fieldset>
    <legend class="text-lg font-medium text-gray-900 mb-4">Contact Information</legend>

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <%= form_field form, :first_name, label: "First Name" %>
      <%= form_field form, :last_name, label: "Last Name" %>
    </div>

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <%= form_field form, :email, type: :email_field, label: "Email" %>
      <%= form_field form, :phone, type: :telephone_field, label: "Phone" %>
    </div>
  </fieldset>

  <fieldset>
    <legend class="text-lg font-medium text-gray-900 mb-4">Pipeline Status</legend>

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <div class="mb-4">
        <%= form.label :source, "Source", class: "block text-sm font-medium text-gray-700" %>
        <%= form.select :source,
          [["Select source...", ""]] + Prospect::SOURCES.map { |s| [s.humanize, s] },
          {},
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>

      <div class="mb-4">
        <%= form.label :stage, "Stage", class: "block text-sm font-medium text-gray-700" %>
        <%= form.select :stage,
          Prospect::STAGES.reject { |s| %w[converted declined].include?(s) }.map { |s| [s.humanize, s] },
          {},
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>
    </div>

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <div class="mb-4">
        <%= form.label :agent_id, "Assigned Agent", class: "block text-sm font-medium text-gray-700" %>
        <%= form.select :agent_id,
          [["Unassigned", ""]] + Agent.active.alphabetical.map { |a| [a.full_name, a.id] },
          { selected: prospect.agent_id },
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>

      <%= form_field form, :genre_interest, label: "Genre Interest" %>
    </div>

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <div class="mb-4">
        <%= form.label :last_contact_date, "Last Contact Date", class: "block text-sm font-medium text-gray-700" %>
        <%= form.date_field :last_contact_date, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>

      <div class="mb-4">
        <%= form.label :follow_up_date, "Follow Up Date", class: "block text-sm font-medium text-gray-700" %>
        <%= form.date_field :follow_up_date, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>
    </div>
  </fieldset>

  <fieldset>
    <legend class="text-lg font-medium text-gray-900 mb-4">Project Information</legend>

    <%= form_field form, :project_title, label: "Project Title" %>

    <%= form_field form, :project_description, type: :text_area, label: "Project Description", rows: 4 %>

    <%= form_field form, :estimated_word_count, type: :number_field, label: "Estimated Word Count", min: 1 %>
  </fieldset>

  <fieldset>
    <legend class="text-lg font-medium text-gray-900 mb-4">Additional Information</legend>

    <%= form_field form, :notes, type: :text_area, label: "Notes", rows: 3 %>
  </fieldset>

  <div class="flex justify-end gap-3 pt-4 border-t border-gray-200">
    <%= secondary_button "Cancel", url: prospect.persisted? ? prospect_path(prospect) : prospects_path %>
    <%= form.submit prospect.persisted? ? "Update Prospect" : "Create Prospect", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 cursor-pointer" %>
  </div>
<% end %>
