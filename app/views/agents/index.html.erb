<div class="w-full">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Agents</h1>
    <div class="flex gap-2">
      <%= link_to agents_path(status: params[:status], genre: params[:genre], search: params[:search]),
        class: "p-2 rounded-md #{!@group_by_agency ? 'bg-blue-100 text-blue-700' : 'bg-gray-100 text-gray-600 hover:bg-gray-200'}",
        title: "List view",
        data: { testid: "view-list" } do %>
        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16" />
        </svg>
      <% end %>
      <%= link_to agents_path(group_by: "agency", status: params[:status], genre: params[:genre], search: params[:search]),
        class: "p-2 rounded-md #{@group_by_agency ? 'bg-blue-100 text-blue-700' : 'bg-gray-100 text-gray-600 hover:bg-gray-200'}",
        title: "Group by agency",
        data: { testid: "view-grouped" } do %>
        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
        </svg>
      <% end %>
      <%= primary_button "New Agent", url: new_agent_path %>
    </div>
  </div>

  <%= render "search_form" %>
  <%= render "filters" %>

  <div class="bg-white rounded-lg shadow overflow-hidden">
    <% if @agents.any? %>
      <% if @group_by_agency %>
        <% @agents.group_by(&:agency_name).sort_by { |agency, _| agency.to_s }.each do |agency, agency_agents| %>
          <div data-testid="agency-group" class="border-b border-gray-200 last:border-b-0">
            <div class="bg-gray-50 px-6 py-3">
              <h2 class="text-sm font-semibold text-gray-700"><%= agency || "Independent" %></h2>
            </div>
            <table class="min-w-full divide-y divide-gray-200 table-fixed">
              <colgroup>
                <col class="w-[25%]">
                <col class="w-[20%]">
                <col class="w-[20%]">
                <col class="w-[10%]">
                <col class="w-[12%]">
                <col class="w-[13%]">
              </colgroup>
              <tbody class="bg-white divide-y divide-gray-200">
                <% agency_agents.each do |agent| %>
                  <%= render "agent", agent: agent %>
                <% end %>
              </tbody>
            </table>
          </div>
        <% end %>
      <% else %>
        <table class="min-w-full divide-y divide-gray-200 table-fixed">
          <thead class="bg-gray-50">
            <tr>
              <th class="w-[25%] px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
              <th class="w-[20%] px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Agency</th>
              <th class="w-[20%] px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Genres</th>
              <th class="w-[10%] px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Commission</th>
              <th class="w-[12%] px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="w-[13%] px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @agents.each do |agent| %>
              <%= render "agent", agent: agent %>
            <% end %>
          </tbody>
        </table>
      <% end %>
    <% else %>
      <%= empty_state(
        icon: "users",
        message: "No agents found. Create your first agent to get started.",
        action: primary_button("New Agent", url: new_agent_path)
      ) %>
    <% end %>
  </div>
</div>
