<div class="flex-1 max-w-md">
  <h1 class="text-2xl font-bold text-gray-900">Form Validation Test</h1>
  <p class="mt-2 text-gray-600">Tests client-side form validation before submit.</p>

  <% if @submitted %>
    <div data-testid="form-submitted" class="mt-4 p-3 bg-green-50 text-green-800 rounded">
      Form was submitted successfully.
    </div>
  <% end %>

  <div class="mt-6">
    <form action="<%= stimulus_test_form_validation_path %>" method="post"
          data-controller="form-validation"
          data-action="submit->form-validation#validate"
          data-testid="validation-form">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

      <div class="mb-4">
        <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
        <input type="text" name="name" id="name"
               data-form-validation-target="field"
               data-validation-required="true"
               class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
        <p class="mt-1 text-sm text-red-600 hidden"
           data-testid="validation-error-name"
           data-form-validation-target="error"
           data-field="name"></p>
      </div>

      <div class="mb-4">
        <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
        <input type="text" name="email" id="email"
               data-form-validation-target="field"
               data-validation-required="true"
               data-validation-email="true"
               class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
        <p class="mt-1 text-sm text-red-600 hidden"
           data-testid="validation-error-email"
           data-form-validation-target="error"
           data-field="email"></p>
      </div>

      <div>
        <button type="submit"
                class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700">
          Save
        </button>
      </div>
    </form>
  </div>
</div>
