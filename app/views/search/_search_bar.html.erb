<!-- Search trigger button in navigation -->
<div data-controller="search-overlay" data-search-overlay-url-value="<%= search_path %>">
  <button
    type="button"
    data-testid="search-bar"
    data-action="click->search-overlay#open"
    class="hidden md:flex items-center gap-2 px-3 py-1.5 text-sm text-gray-500 bg-gray-100 rounded-md hover:bg-gray-200 transition-colors border border-gray-200"
  >
    <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
    </svg>
    <span>Search...</span>
    <kbd class="hidden sm:inline-flex items-center px-1.5 py-0.5 text-xs font-medium text-gray-400 bg-white rounded border border-gray-200">
      <span class="text-xs">&#8984;</span>K
    </kbd>
  </button>

  <!-- Search overlay/modal -->
  <div
    data-testid="search-overlay"
    data-search-overlay-target="overlay"
    class="fixed inset-0 z-[100] hidden"
    data-action="keydown.escape->search-overlay#close"
  >
    <!-- Backdrop -->
    <div
      class="fixed inset-0 bg-gray-500/50 transition-opacity"
      data-action="click->search-overlay#close"
    ></div>

    <!-- Modal -->
    <div class="fixed inset-x-0 top-[15%] mx-auto max-w-xl px-4">
      <div class="bg-white rounded-xl shadow-2xl overflow-hidden ring-1 ring-black/5">
        <!-- Search input -->
        <div class="flex items-center gap-3 px-4 border-b border-gray-200">
          <svg class="h-5 w-5 text-gray-400 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
          <input
            id="search-input"
            type="text"
            placeholder="Search authors, books, publishers..."
            class="flex-1 py-3 text-sm text-gray-900 placeholder-gray-400 border-0 focus:ring-0 focus:outline-none"
            data-search-overlay-target="input"
            data-action="input->search-overlay#search"
            autocomplete="off"
            autocorrect="off"
            autocapitalize="off"
            spellcheck="false"
          />
          <kbd class="text-xs font-medium text-gray-400 bg-gray-100 rounded px-1.5 py-0.5 border border-gray-200">
            ESC
          </kbd>
        </div>

        <!-- Results container -->
        <div
          id="search-suggestions"
          data-search-overlay-target="results"
          class="max-h-80 overflow-y-auto py-2"
        >
          <div class="px-4 py-6 text-center text-sm text-gray-500">
            Start typing to search...
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
