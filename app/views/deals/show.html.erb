<div class="w-full">
  <div class="mb-6">
    <%= link_to "&larr; Back to Deals".html_safe, deals_path, class: "text-blue-600 hover:text-blue-800 text-sm" %>
  </div>

  <div class="bg-white rounded-lg shadow overflow-hidden">
    <div class="px-6 py-5 border-b border-gray-200">
      <div class="flex justify-between items-start">
        <div>
          <h1 class="text-2xl font-bold text-gray-900">
            <%= link_to @deal.book.title, book_path(@deal.book), class: "hover:text-blue-600" %>
          </h1>
          <p class="mt-1 text-sm text-gray-500">
            by <%= link_to @deal.book.author.full_name, author_path(@deal.book.author), class: "text-blue-600 hover:text-blue-800" %>
          </p>
          <div class="mt-2 flex items-center gap-2">
            <%= badge @deal.status.humanize, status: @deal.status.to_sym %>
            <span data-testid="deal-status" class="sr-only"><%= @deal.status %></span>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800" data-testid="deal-type">
              <%= @deal.deal_type.humanize %>
            </span>
          </div>
        </div>
        <div class="flex gap-2">
          <%= secondary_button "Edit", url: edit_deal_path(@deal) %>
          <%= danger_button "Delete", url: deal_path(@deal), confirm: "Are you sure you want to delete this deal?", data: { turbo_method: :delete } %>
        </div>
      </div>
    </div>

    <div class="px-6 py-5">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <%# Left column - Deal details %>
        <div>
          <h2 class="text-lg font-medium text-gray-900 mb-4">Deal Information</h2>
          <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
            <div>
              <dt class="text-sm font-medium text-gray-500">Publisher</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= link_to @deal.publisher.name, publisher_path(@deal.publisher), class: "text-blue-600 hover:text-blue-800" %>
                <% if @deal.publisher.imprint.present? %>
                  <div class="text-gray-500">(<%= @deal.publisher.imprint %>)</div>
                <% end %>
              </dd>
            </div>

            <div>
              <dt class="text-sm font-medium text-gray-500">Agent</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <% if @deal.agent %>
                  <%= link_to @deal.agent.full_name, agent_path(@deal.agent), class: "text-blue-600 hover:text-blue-800" %>
                  <div class="text-gray-500"><%= @deal.agent.agency_name %></div>
                <% else %>
                  <span class="text-gray-500">No agent</span>
                <% end %>
              </dd>
            </div>

            <div>
              <dt class="text-sm font-medium text-gray-500">Offer Date</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @deal.offer_date&.strftime("%B %d, %Y") || "-" %></dd>
            </div>

            <div>
              <dt class="text-sm font-medium text-gray-500">Contract Date</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @deal.contract_date&.strftime("%B %d, %Y") || "-" %></dd>
            </div>

            <div>
              <dt class="text-sm font-medium text-gray-500">Delivery Date</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @deal.delivery_date&.strftime("%B %d, %Y") || "-" %></dd>
            </div>

            <div>
              <dt class="text-sm font-medium text-gray-500">Publication Date</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @deal.publication_date&.strftime("%B %d, %Y") || "-" %></dd>
            </div>

            <% if @deal.days_to_close %>
              <div>
                <dt class="text-sm font-medium text-gray-500">Days to Close</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @deal.days_to_close %> days</dd>
              </div>
            <% end %>

            <% if @deal.option_books.present? %>
              <div>
                <dt class="text-sm font-medium text-gray-500">Option Books</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @deal.option_books %></dd>
              </div>
            <% end %>

            <div class="sm:col-span-2">
              <dt class="text-sm font-medium text-gray-500">Terms Summary</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @deal.terms_summary || "-" %></dd>
            </div>

            <div class="sm:col-span-2">
              <dt class="text-sm font-medium text-gray-500">Notes</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @deal.notes || "-" %></dd>
            </div>
          </dl>
        </div>

        <%# Right column - Financial summary %>
        <div>
          <%= render "financial_summary", deal: @deal %>
        </div>
      </div>
    </div>
  </div>

  <%# Status Progression %>
  <div class="mt-6 bg-white rounded-lg shadow overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-medium text-gray-900">Deal Progress</h2>
    </div>
    <div class="px-6 py-4">
      <div class="flex items-center justify-between">
        <% Deal.workflow_statuses.each_with_index do |status, index| %>
          <% is_current = @deal.status == status %>
          <% is_past = @deal.status_past?(status) %>
          <div class="flex items-center">
            <div class="<%= @deal.terminated? ? 'bg-red-600' : (is_current ? 'bg-blue-600' : (is_past ? 'bg-green-600' : 'bg-gray-300')) %> rounded-full h-8 w-8 flex items-center justify-center">
              <% if is_past && !@deal.terminated? %>
                <svg class="h-5 w-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
              <% else %>
                <span class="text-white text-sm font-medium"><%= index + 1 %></span>
              <% end %>
            </div>
            <span class="ml-2 text-sm <%= is_current ? 'font-semibold text-blue-600' : (is_past ? 'text-green-600' : 'text-gray-500') %>">
              <%= status.humanize %>
            </span>
          </div>
          <% unless index == Deal.workflow_statuses.length - 1 %>
            <div class="flex-1 h-0.5 mx-4 <%= is_past ? 'bg-green-600' : 'bg-gray-300' %>"></div>
          <% end %>
        <% end %>
      </div>
      <% if @deal.terminated? %>
        <div class="mt-4 p-3 bg-red-50 rounded-lg">
          <p class="text-sm text-red-700">This deal has been terminated.</p>
        </div>
      <% end %>
    </div>
  </div>

  <%# Notes and Activities Tabs %>
  <div class="mt-6 bg-white rounded-lg shadow overflow-hidden" data-controller="tabs" data-tabs-active-class="border-blue-500 text-blue-600" data-tabs-inactive-class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300">
    <div class="border-b border-gray-200">
      <nav class="-mb-px flex" data-testid="deal-tabs">
        <a href="#notes" class="border-b-2 border-blue-500 text-blue-600 py-4 px-6 text-sm font-medium" data-tabs-target="tab" data-action="click->tabs#switch" data-tab="notes">
          Notes
        </a>
        <a href="#activities" class="border-b-2 border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 py-4 px-6 text-sm font-medium" data-tabs-target="tab" data-action="click->tabs#switch" data-tab="activities">
          Activities
        </a>
      </nav>
    </div>

    <div>
      <div data-testid="notes-tab-content" data-tabs-target="panel" data-panel="notes" class="p-6">
        <%= render "notes/list", notable: @deal, notes: @deal.note_records.pinned_first %>
      </div>

      <div data-testid="activities-tab-content" data-tabs-target="panel" data-panel="activities" class="p-6 hidden" data-testid-also="activity-timeline-section">
        <div data-testid="activity-timeline-section">
          <div class="flex justify-between items-center mb-4">
            <h2 class="text-lg font-medium text-gray-900">Activities</h2>
            <%= link_to "View All Activities",
                activities_path(trackable_type: "Deal", trackable_id: @deal.id),
                class: "text-sm text-blue-600 hover:text-blue-800" %>
          </div>
          <% if @recent_activities.any? %>
            <%= render "activities/timeline", activities: @recent_activities %>
          <% else %>
            <div class="py-8 text-center text-gray-500 text-sm">
              No activities recorded yet.
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
