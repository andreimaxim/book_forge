<div class="grid grid-cols-1 md:grid-cols-4 gap-4">
  <% Deal.statuses.keys.each do |status| %>
    <% next if %w[completed terminated].include?(status) %>
    <div data-testid="pipeline-status-<%= status %>" class="bg-gray-50 rounded-lg p-4">
      <div class="flex justify-between items-center mb-4">
        <h3 class="text-sm font-semibold text-gray-700 uppercase tracking-wide"><%= status.humanize %></h3>
        <span class="inline-flex items-center justify-center px-2 py-1 text-xs font-bold leading-none text-gray-600 bg-gray-200 rounded-full">
          <%= deals.select { |d| d.status == status }.count %>
        </span>
      </div>
      <div class="space-y-3">
        <% deals.select { |d| d.status == status }.each do |deal| %>
          <div class="bg-white rounded-lg shadow p-4">
            <div class="flex items-start justify-between">
              <div class="flex-1 min-w-0">
                <%= link_to deal.book.title, deal_path(deal), class: "text-sm font-medium text-gray-900 hover:text-blue-600 block truncate" %>
                <p class="text-xs text-gray-500 truncate mt-1"><%= deal.book.author.full_name %></p>
              </div>
            </div>
            <div class="mt-3">
              <div class="flex items-center justify-between text-xs">
                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-indigo-100 text-indigo-800">
                  <%= deal.deal_type.humanize %>
                </span>
                <span class="font-semibold text-gray-700"><%= deal.formatted_advance %></span>
              </div>
            </div>
            <div class="mt-2 pt-2 border-t border-gray-100">
              <%= link_to deal.publisher.name, publisher_path(deal.publisher), class: "text-xs text-gray-500 hover:text-blue-600 truncate block" %>
            </div>
            <% if deal.agent %>
              <div class="mt-1 text-xs text-gray-400">
                Agent: <%= deal.agent.first_name[0] %><%= deal.agent.last_name[0] %>
              </div>
            <% end %>
            <% if deal.offer_date %>
              <div class="mt-1 text-xs text-gray-400">
                Offer: <%= deal.offer_date.strftime("%b %d, %Y") %>
              </div>
            <% end %>
          </div>
        <% end %>
        <% if deals.select { |d| d.status == status }.empty? %>
          <div class="text-center py-4 text-sm text-gray-400">
            No deals
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
