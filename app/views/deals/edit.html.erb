<div class="w-full max-w-3xl mx-auto">
  <div class="mb-6">
    <%= link_to "&larr; Back to Deal".html_safe, deal_path(@deal), class: "text-blue-600 hover:text-blue-800 text-sm" %>
  </div>

  <div class="bg-white rounded-lg shadow overflow-hidden">
    <div class="px-6 py-5 border-b border-gray-200">
      <h1 class="text-2xl font-bold text-gray-900">Edit Deal</h1>
      <p class="mt-1 text-sm text-gray-500"><%= @deal.book.title %> - <%= @deal.publisher.name %></p>
    </div>

    <div class="px-6 py-5">
      <%= render "form", deal: @deal %>
    </div>
  </div>
</div>
