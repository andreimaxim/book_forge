<div data-testid="financial-summary" class="bg-gray-50 rounded-lg p-6">
  <h2 class="text-lg font-medium text-gray-900 mb-4">Financial Summary</h2>

  <div class="space-y-4">
    <%# Advance %>
    <div class="bg-white rounded-lg p-4 shadow-sm">
      <div class="flex justify-between items-center">
        <span class="text-sm font-medium text-gray-500">Advance</span>
        <span class="text-2xl font-bold text-gray-900"><%= deal.formatted_advance %></span>
      </div>
      <div class="text-xs text-gray-400 text-right"><%= deal.advance_currency %></div>
    </div>

    <% if deal.agent %>
      <%# Agent Commission %>
      <div class="bg-white rounded-lg p-4 shadow-sm">
        <div class="flex justify-between items-center">
          <span class="text-sm font-medium text-gray-500">
            Agent Commission (<%= deal.agent.commission_rate %>%)
          </span>
          <span class="text-lg font-semibold text-red-600">
            -<%= number_to_currency(deal.agent_commission, unit: Deal::CURRENCY_SYMBOLS[deal.advance_currency] || "$") %>
          </span>
        </div>
        <div class="text-xs text-gray-400 mt-1">
          <%= deal.agent.full_name %> at <%= deal.agent.agency_name %>
        </div>
      </div>

      <%# Author Net %>
      <div class="bg-blue-50 rounded-lg p-4 shadow-sm border border-blue-200">
        <div class="flex justify-between items-center">
          <span class="text-sm font-medium text-blue-700">Author Net Advance</span>
          <span class="text-xl font-bold text-blue-900">
            <%= number_to_currency(deal.author_net_advance, unit: Deal::CURRENCY_SYMBOLS[deal.advance_currency] || "$") %>
          </span>
        </div>
      </div>
    <% end %>

    <%# Royalty Rates %>
    <div class="bg-white rounded-lg p-4 shadow-sm">
      <h3 class="text-sm font-medium text-gray-700 mb-3">Royalty Rates</h3>
      <div class="grid grid-cols-3 gap-4 text-center">
        <div>
          <div class="text-lg font-semibold text-gray-900">
            <%= deal.royalty_rate_hardcover ? "#{deal.royalty_rate_hardcover}%" : "-" %>
          </div>
          <div class="text-xs text-gray-500">Hardcover</div>
        </div>
        <div>
          <div class="text-lg font-semibold text-gray-900">
            <%= deal.royalty_rate_paperback ? "#{deal.royalty_rate_paperback}%" : "-" %>
          </div>
          <div class="text-xs text-gray-500">Paperback</div>
        </div>
        <div>
          <div class="text-lg font-semibold text-gray-900">
            <%= deal.royalty_rate_ebook ? "#{deal.royalty_rate_ebook}%" : "-" %>
          </div>
          <div class="text-xs text-gray-500">E-book</div>
        </div>
      </div>
    </div>

    <%# Deal Status Summary %>
    <div class="bg-white rounded-lg p-4 shadow-sm">
      <h3 class="text-sm font-medium text-gray-700 mb-3">Deal Status</h3>
      <div class="space-y-2">
        <div class="flex justify-between text-sm">
          <span class="text-gray-500">Signed</span>
          <span class="font-medium <%= deal.signed? ? 'text-green-600' : 'text-gray-400' %>">
            <%= deal.signed? ? "Yes" : "No" %>
          </span>
        </div>
        <% if deal.days_to_close %>
          <div class="flex justify-between text-sm">
            <span class="text-gray-500">Days to Close</span>
            <span class="font-medium text-gray-900"><%= deal.days_to_close %></span>
          </div>
        <% end %>
        <% if deal.option_books.present? %>
          <div class="flex justify-between text-sm">
            <span class="text-gray-500">Option Books</span>
            <span class="font-medium text-gray-900"><%= deal.option_books %></span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
