<div class="w-full">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Deals</h1>
    <div class="flex gap-2">
      <%= link_to deals_path(view: "list", status: params[:status], deal_type: params[:deal_type], publisher_id: params[:publisher_id], agent_id: params[:agent_id], start_date: params[:start_date], end_date: params[:end_date], search: params[:search]),
        class: "p-2 rounded-md #{@view_mode == 'list' ? 'bg-blue-100 text-blue-700' : 'bg-gray-100 text-gray-600 hover:bg-gray-200'}",
        title: "List view" do %>
        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16" />
        </svg>
      <% end %>
      <%= link_to deals_path(view: "pipeline", status: params[:status], deal_type: params[:deal_type], publisher_id: params[:publisher_id], agent_id: params[:agent_id], start_date: params[:start_date], end_date: params[:end_date], search: params[:search]),
        class: "p-2 rounded-md #{@view_mode == 'pipeline' ? 'bg-blue-100 text-blue-700' : 'bg-gray-100 text-gray-600 hover:bg-gray-200'}",
        title: "Pipeline view" do %>
        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17V7m0 10a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2h2a2 2 0 012 2m0 10a2 2 0 002 2h2a2 2 0 002-2M9 7a2 2 0 012-2h2a2 2 0 012 2m0 10V7m0 10a2 2 0 002 2h2a2 2 0 002-2V7a2 2 0 00-2-2h-2a2 2 0 00-2 2" />
        </svg>
      <% end %>
      <%= primary_button "New Deal", url: new_deal_path %>
    </div>
  </div>

  <%= render "filters" %>

  <% if @view_mode == "pipeline" %>
    <%= render "pipeline", deals: @deals %>
  <% else %>
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <% if @deals.any? %>
        <table data-testid="deals-table" class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Book</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Publisher</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Advance</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Agent</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Offer Date</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @deals.each do |deal| %>
              <%= render "deal", deal: deal %>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <%= empty_state(
          icon: "document",
          message: "No deals found. Create your first deal to get started.",
          action: primary_button("New Deal", url: new_deal_path)
        ) %>
      <% end %>
    </div>
  <% end %>
</div>
