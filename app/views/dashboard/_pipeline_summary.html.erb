<div class="mb-8" data-testid="pipeline-summary">
  <h2 class="text-lg font-medium text-gray-900 mb-4">Pipeline Summary</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <%# Books by Status %>
    <div class="bg-white rounded-lg shadow" data-testid="books-by-status">
      <div class="px-5 py-4 border-b border-gray-200">
        <h3 class="text-base font-medium text-gray-900">Books by Status</h3>
      </div>
      <div class="px-5 py-4">
        <% if books_by_status.values.sum.zero? %>
          <p class="text-sm text-gray-500">No books yet.</p>
        <% else %>
          <dl class="space-y-3">
            <% books_by_status.each do |status, count| %>
              <div class="flex items-center justify-between">
                <dt class="text-sm font-medium text-gray-600"><%= status.humanize.titleize %></dt>
                <dd class="text-sm font-semibold text-gray-900">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                    <% case status %>
                    <% when 'published' %>
                      bg-green-100 text-green-800
                    <% when 'manuscript' %>
                      bg-blue-100 text-blue-800
                    <% when 'submitted', 'under_review' %>
                      bg-yellow-100 text-yellow-800
                    <% when 'accepted', 'in_production' %>
                      bg-indigo-100 text-indigo-800
                    <% when 'out_of_print' %>
                      bg-gray-100 text-gray-800
                    <% else %>
                      bg-gray-100 text-gray-800
                    <% end %>
                  ">
                    <%= count %>
                  </span>
                </dd>
              </div>
            <% end %>
          </dl>
        <% end %>
      </div>
    </div>

    <%# Deals by Status %>
    <div class="bg-white rounded-lg shadow" data-testid="deals-by-status">
      <div class="px-5 py-4 border-b border-gray-200">
        <h3 class="text-base font-medium text-gray-900">Deals by Status</h3>
      </div>
      <div class="px-5 py-4">
        <% if deals_by_status.values.sum.zero? %>
          <p class="text-sm text-gray-500">No deals yet.</p>
        <% else %>
          <dl class="space-y-3">
            <% deals_by_status.each do |status, count| %>
              <div class="flex items-center justify-between">
                <dt class="text-sm font-medium text-gray-600"><%= status.humanize.titleize %></dt>
                <dd class="text-sm font-semibold text-gray-900">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                    <% case status %>
                    <% when 'signed', 'active' %>
                      bg-green-100 text-green-800
                    <% when 'negotiating' %>
                      bg-yellow-100 text-yellow-800
                    <% when 'pending_contract' %>
                      bg-blue-100 text-blue-800
                    <% when 'completed' %>
                      bg-gray-100 text-gray-800
                    <% when 'terminated' %>
                      bg-red-100 text-red-800
                    <% else %>
                      bg-gray-100 text-gray-800
                    <% end %>
                  ">
                    <%= count %>
                  </span>
                </dd>
              </div>
            <% end %>
          </dl>
        <% end %>
      </div>
    </div>
  </div>
</div>
