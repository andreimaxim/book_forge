<div class="relative pb-6" data-testid="activity-item">
  <% unless local_assigns[:last] %>
    <span class="absolute top-4 left-4 -ml-px h-full w-0.5 bg-gray-200" aria-hidden="true"></span>
  <% end %>
  <div class="relative flex space-x-3">
    <div>
      <span class="h-8 w-8 rounded-full flex items-center justify-center ring-8 ring-white <%= activity_icon_color(activity) %>">
        <%= activity_icon(activity) %>
      </span>
    </div>
    <div class="min-w-0 flex-1 pt-1 flex justify-between space-x-4">
      <div>
        <p class="text-sm text-gray-900">
          <% if activity.trackable.present? %>
            <% record_path = trackable_path(activity) %>
            <% if record_path %>
              <a href="<%= record_path %>" class="font-medium text-blue-600 hover:text-blue-800" data-testid="activity-record-link" data-entity-type="<%= activity.trackable_type %>" data-turbo-frame="_top">
                <span data-testid="activity-entity-type"><%= activity.trackable_type %></span>
              </a>
            <% else %>
              <span class="font-medium text-gray-700" data-testid="activity-entity-type"><%= activity.trackable_type %></span>
            <% end %>
          <% else %>
            <span class="font-medium text-gray-700" data-testid="activity-entity-type"><%= activity.trackable_type %></span>
          <% end %>
          &mdash; <%= activity.human_description %>
        </p>
        <% if activity.field_changed.present? && activity.old_value.present? && activity.new_value.present? %>
          <p class="mt-1 text-sm text-gray-500">
            <span class="line-through text-red-600"><%= truncate(activity.old_value, length: 50) %></span>
            <span class="mx-1">&rarr;</span>
            <span class="text-green-600"><%= truncate(activity.new_value, length: 50) %></span>
          </p>
        <% end %>
      </div>
      <div class="text-right text-sm whitespace-nowrap text-gray-500">
        <time datetime="<%= activity.created_at.iso8601 %>">
          <%= time_ago_in_words(activity.created_at) %> ago
        </time>
      </div>
    </div>
  </div>
</div>
