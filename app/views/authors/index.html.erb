<div class="w-full">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Authors</h1>
    <%= primary_button "New Author", url: new_author_path, data: { turbo_frame: "modal" } %>
  </div>

  <%= turbo_frame_tag "authors_list" do %>
  <%= render "search_form" %>
  <%= render "filters" %>
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <% if @authors.any? %>
        <table class="min-w-full divide-y divide-gray-200 table-fixed">
          <thead class="bg-gray-50">
            <tr>
              <th class="w-[25%] px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
              <th class="w-[25%] px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
              <th class="w-[20%] px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Genre</th>
              <th class="w-[15%] px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="w-[15%] px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody id="authors_list_body" class="bg-white divide-y divide-gray-200">
            <% @authors.each do |author| %>
              <%= render "author", author: author %>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <%= empty_state(
          icon: "users",
          message: "No authors found. Create your first author to get started.",
          action: primary_button("New Author", url: new_author_path)
        ) %>
      <% end %>
    </div>
  <% end %>
</div>

<%= turbo_frame_tag "modal" %>
