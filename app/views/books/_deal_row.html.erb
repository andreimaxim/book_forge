<tr data-testid="deal-row">
  <td class="px-6 py-4 whitespace-nowrap">
    <%= link_to deal_row.publisher.name, publisher_path(deal_row.publisher), class: "text-sm font-medium text-gray-900 hover:text-blue-600" %>
    <% if deal_row.publisher.imprint.present? %>
      <div class="text-xs text-gray-500">(<%= deal_row.publisher.imprint %>)</div>
    <% end %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap">
    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
      <%= deal_row.deal_type.humanize %>
    </span>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
    <%= deal_row.formatted_advance %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap">
    <%= badge deal_row.status.humanize, status: deal_row.status.to_sym %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <% if deal_row.agent %>
      <%= link_to deal_row.agent.full_name, agent_path(deal_row.agent), class: "hover:text-blue-600" %>
    <% else %>
      <span class="text-gray-400">-</span>
    <% end %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= deal_row.offer_date&.strftime("%b %d, %Y") || "-" %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
    <%= link_to "View", deal_path(deal_row), class: "text-blue-600 hover:text-blue-800 mr-3" %>
    <%= link_to "Edit", edit_deal_path(deal_row), class: "text-gray-600 hover:text-gray-800" %>
  </td>
</tr>
