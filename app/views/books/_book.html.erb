<% cache [book, book.author] do %>
<tr data-testid="book-row" id="<%= dom_id(book) %>">
  <td class="px-6 py-4 whitespace-nowrap">
    <div class="flex items-center">
      <div class="flex-shrink-0 h-12 w-9 bg-gray-200 rounded flex items-center justify-center">
        <% if book.cover_image_url.present? %>
          <%= image_tag book.cover_image_url, class: "h-12 w-9 object-cover rounded" %>
        <% else %>
          <svg class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
        <% end %>
      </div>
      <div class="ml-4">
        <div class="text-sm font-medium text-gray-900">
          <%= link_to book.title, book, class: "hover:text-blue-600" %>
        </div>
        <% if book.subtitle.present? %>
          <div class="text-sm text-gray-500"><%= book.subtitle %></div>
        <% end %>
      </div>
    </div>
  </td>
  <td class="px-6 py-4 whitespace-nowrap">
    <div class="text-sm text-gray-900">
      <%= link_to book.author.full_name, book.author, class: "hover:text-blue-600" %>
    </div>
  </td>
  <td class="px-6 py-4 whitespace-nowrap">
    <div class="text-sm text-gray-500"><%= book.genre %></div>
    <% if book.subgenre.present? %>
      <div class="text-xs text-gray-400"><%= book.subgenre %></div>
    <% end %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap">
    <%= badge book.status.humanize, status: book.status.to_sym %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
    <%= link_to "Edit", edit_book_path(book), class: "text-blue-600 hover:text-blue-900 mr-3" %>
    <%= link_to "Delete", book_path(book), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete #{book.title}?" }, class: "text-red-600 hover:text-red-900" %>
  </td>
</tr>
<% end %>
