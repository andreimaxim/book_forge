<div class="flex gap-4 overflow-x-auto pb-4">
  <% Book::STATUSES.each do |status| %>
    <div data-testid="pipeline-status-<%= status %>" class="bg-gray-50 rounded-lg p-4 min-w-[280px] flex-shrink-0">
      <div class="flex justify-between items-center mb-4">
        <h3 class="text-sm font-semibold text-gray-700 uppercase tracking-wide"><%= status.humanize %></h3>
        <span class="inline-flex items-center justify-center px-2 py-1 text-xs font-bold leading-none text-gray-600 bg-gray-200 rounded-full">
          <%= books.by_status(status).count %>
        </span>
      </div>
      <div class="space-y-3">
        <% books.by_status(status).each do |book| %>
          <div class="bg-white rounded-lg shadow p-4">
            <div class="flex items-start gap-3">
              <div class="flex-shrink-0 h-16 w-11 bg-gray-200 rounded flex items-center justify-center">
                <% if book.cover_image_url.present? %>
                  <%= image_tag book.cover_image_url, class: "h-16 w-11 object-cover rounded" %>
                <% else %>
                  <svg class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                  </svg>
                <% end %>
              </div>
              <div class="flex-1 min-w-0">
                <%= link_to book.title, book, class: "text-sm font-medium text-gray-900 hover:text-blue-600 block truncate" %>
                <p class="text-xs text-gray-500 truncate mt-1">
                  <%= link_to book.author.full_name, book.author, class: "hover:text-blue-600" %>
                </p>
              </div>
            </div>
            <div class="mt-3 flex items-center justify-between">
              <span class="text-xs text-gray-400"><%= book.genre %></span>
              <% if book.days_since_submission %>
                <span class="text-xs text-gray-500"><%= book.days_since_submission %> days</span>
              <% end %>
            </div>
          </div>
        <% end %>
        <% if books.by_status(status).empty? %>
          <div class="text-center py-4 text-sm text-gray-400">
            No books
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
