<%= form_with model: book, class: "space-y-6" do |form| %>
  <% if book.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            There were <%= pluralize(book.errors.count, "error") %> with your submission
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <%# Title and Subtitle %>
  <%= form_field form, :title, label: "Title" %>
  <%= form_field form, :subtitle, label: "Subtitle" %>

  <%# Author selection %>
  <div class="mb-4">
    <%= form.label :author_id, "Author", class: "block text-sm font-medium text-gray-700" %>
    <%= form.collection_select :author_id, Author.alphabetical, :id, :full_name,
      { prompt: "Select an author" },
      class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
    <% if book.errors[:author].any? %>
      <p class="mt-1 text-sm text-red-600"><%= book.errors[:author].first %></p>
    <% end %>
  </div>

  <%# Genre and Subgenre %>
  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
    <%= form_field form, :genre, label: "Genre" %>
    <%= form_field form, :subgenre, label: "Subgenre" %>
  </div>

  <%# Status %>
  <div class="mb-4">
    <%= form.label :status, "Status", class: "block text-sm font-medium text-gray-700" %>
    <%= form.select :status, Book::STATUSES.map { |s| [s.humanize, s] }, {},
      class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
  </div>

  <%# Word Count and Page Count %>
  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
    <div class="mb-4">
      <%= form.label :word_count, "Word Count", class: "block text-sm font-medium text-gray-700" %>
      <%= form.number_field :word_count, min: 1, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      <% if book.errors[:word_count].any? %>
        <p class="mt-1 text-sm text-red-600"><%= book.errors[:word_count].first %></p>
      <% end %>
    </div>

    <div class="mb-4">
      <%= form.label :page_count, "Page Count", class: "block text-sm font-medium text-gray-700" %>
      <%= form.number_field :page_count, min: 1, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      <% if book.errors[:page_count].any? %>
        <p class="mt-1 text-sm text-red-600"><%= book.errors[:page_count].first %></p>
      <% end %>
    </div>
  </div>

  <%# Synopsis %>
  <%= form_field form, :synopsis, type: :text_area, label: "Synopsis", rows: 3 %>

  <%# Description %>
  <%= form_field form, :description, type: :text_area, label: "Description", rows: 4 %>

  <%# Publication Details Section %>
  <div class="pt-6 border-t border-gray-200">
    <h3 class="text-lg font-medium text-gray-900 mb-4">Publication Details</h3>

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <div class="mb-4">
        <%= form.label :format, "Format", class: "block text-sm font-medium text-gray-700" %>
        <%= form.select :format, Book::FORMATS.map { |f| [f.humanize, f] }, { include_blank: "Select format" },
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>

      <div class="mb-4">
        <%= form.label :isbn, "ISBN", class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :isbn, placeholder: "978-0-14-143951-8",
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm font-mono" %>
        <% if book.errors[:isbn].any? %>
          <p class="mt-1 text-sm text-red-600"><%= book.errors[:isbn].first %></p>
        <% end %>
      </div>
    </div>

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <div class="mb-4">
        <%= form.label :publication_date, "Publication Date", class: "block text-sm font-medium text-gray-700" %>
        <%= form.date_field :publication_date,
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
        <% if book.errors[:publication_date].any? %>
          <p class="mt-1 text-sm text-red-600"><%= book.errors[:publication_date].first %></p>
        <% end %>
      </div>

      <div class="mb-4">
        <%= form.label :list_price, "List Price ($)", class: "block text-sm font-medium text-gray-700" %>
        <%= form.number_field :list_price, step: 0.01, min: 0,
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
        <% if book.errors[:list_price].any? %>
          <p class="mt-1 text-sm text-red-600"><%= book.errors[:list_price].first %></p>
        <% end %>
      </div>
    </div>

    <%= form_field form, :cover_image_url, type: :url_field, label: "Cover Image URL", placeholder: "https://example.com/cover.jpg" %>
  </div>

  <%# Notes %>
  <%= form_field form, :notes, type: :text_area, label: "Notes", rows: 3 %>

  <div class="flex justify-end gap-3 pt-4 border-t border-gray-200">
    <%= secondary_button "Cancel", url: book.persisted? ? book_path(book) : books_path %>
    <%= form.submit book.persisted? ? "Update Book" : "Create Book", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 cursor-pointer" %>
  </div>
<% end %>
